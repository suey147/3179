{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "title": "AI Global Index",
    "width": "container",
    "height": 400,
    "params": [
      {
        "name": "zoom_level",
        "value": 150,
        "bind": {
        "input": "range",
        "min": 50,
        "max": 2000,
        "step": 100,
        "name": "Zoom: "
        }
      },
      {
        "name": "center_to",
        "value": "All",
        "bind": {
        "input": "select",
        "options":["All","Americas", "Europe", "Asia-Pacific", "Middle East", "Africa"],
        "name": "Region: "
        }
      }
    ],
    "projection": {
        "type": "mercator", 
        "scale": {"expr": "zoom_level"}
    },
    
    "layer": [
        {
        "data": {
            "url": "https://raw.githubusercontent.com/suey147/3179/HomeworkWeek10/js/ne_110m_map.topojson",
            "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
            }
        },
        "layer": [
            {
            
            "transform": [
            {
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
            }
            ],
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
            "encoding": {"tooltip": {"field": "note"}}
            },
            {

            "transform": [
                    {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                        "url": "https://raw.githubusercontent.com/suey147/3179/main/data/AI_index_db.json"
                        },
                        "key": "Country",
                        "fields": ["Total score", "Country", "Region"]
                    }
                    }
                ],
                
                "encoding": {
                        "color": {
                        "field": "Total score", 
                        "type": "quantitative",
                            "legend":{
                                "labelColor": "white",
                                "titleColor": "white"
                            }
                    },
                    "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                    {"field": "Total score", "type": "quantitative"}
                    ]
                },

                "layer":[
                    {
                        "mark": {"type": "geoshape"},             
                        "params": [
                            {
                            "name": "pts",
                            "select": {"type": "point", "fields": ["Country"]},
                            "value": [{"Country": "United States of America"}]
                            }
                        ],
                        "encoding": {
                            "stroke": {
                                "condition": {
                                  "param": "pts",
                                  "empty": false,
                                  "value": "black"
                                },
                                "value": null
                              },
                              "opacity": {
                                "condition": {
                                    "test": "datum['Region'] === center_to || center_to === 'All'",
                                    "value": 1
                                },
                                "value": 0.2
                              }
                        }
                    }
                ]
            }
        ]
        },
        {
        "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
        "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        }
    ],
    "config": {
        "view": {
            "stroke": "white"
        },
        "background": null
    }   
  }
