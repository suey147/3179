{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "AI Global Index",
  "width":  900,
  "height": 400,
  "autosize": "fit",
  "projection": {
    "type": "equalEarth", 
    "rotate": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"},
    "center":{"expr": "[0,center1]"}
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 200,
      "bind": {
      "input": "range",
      "min": 100,
      "max": 2000,
      "step": 100,
      "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0, 0],
      "bind": {
      "input": "select",
      "options": [
      [80, -20, 0],
      [-50, -50, 0],
      [-100],
      [-70, -40], 
      [-40]
      ],
      "labels": ["America", "Europe", "Asia-Pacific", "Middle East", "Africa"],
      "name": "Region: "
      }
    },
    { 
      "name": "center1", 
      "value": 0,
      "bind": {
        "input": "range",
        "min": -90, 
        "max": 90, 
        "step": 1,
        "name": "Map Center: "
      } 
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/suey147/3179/HomeworkWeek10/js/ne_110m_map.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },

  "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/suey147/3179/HomeworkWeek10/data/AI_index_db.csv"
          },
          "key": "Country",
          "fields": ["Total score"]
        }
      },
        {
          "sort": [{"field": "Total score", "order": "descending"}],
          "window": [{"op": "rank", "as": "ranking"}]
        }
    ],
  "layer": [
    {
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "condition": {
              "test": "datum['Total score'] === null",
              "value": "lightgray"
            },
            "field": "Total score", 
            "type": "quantitative"
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Total score", "type": "quantitative"}
          ]
        }
    },
    {
      "transform": [
        {
          "filter": {"field": "Total score", "valid": true}
        },
        {
          "sort": [{"field": "Total score", "order": "descending"}],
          "window": [{"op": "dense_rank", "as": "ranking"}]
        },
        {"filter": "datum.ranking == 1"},
        {
          "calculate": "'The highest AI Index: ' + datum['Total score']",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -8,
        "dy": -8,
        "baseline": "middle",
        "fontStyle": "italic"
      },
      "encoding": {"text": {"field": "text_annotation"}}
    }
  ],
  
  "config": {
    "mark": {"invalid": null}
  }
}
